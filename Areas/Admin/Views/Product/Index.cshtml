            {
                <div class="Filter">
                    <b>Search By:</b>
                    <div>@Html.RadioButton("searchBy", "Name", true)<text>Name</text></div>
                    <div>@Html.RadioButton("searchBy", "Color")Color</div>
                    @Html.TextBox("search")
